div(class='ui $data.ui input')
  div(class='ui label' body-or='data.label')
  input(type='$data.type', placeholder='$data.placeholder')
  xif(test='data.icon')
    ui-icon(icon='$data.icon')
  xif(test='data.menu')
    .menu
      for(each='item in data.menu')
        .item $item.label
  xif(test='data.link')
    a.ui.tag.label $data.link
  xif(test='data.action')
    ui-btn(attrs='data.action')
