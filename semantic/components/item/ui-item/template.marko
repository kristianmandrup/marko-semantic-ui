
<div body-or="data.content" class="$data.ui item">
  <div if="data.label" class="label">$data.label</div>
  <ui-icon attrs="data.icon" if="data.icon"></ui-icon>
  <div if="data.content" class="content"><a href="$data.link.url" if="data.link">${data.link.label || data.link.url}</a>
    <if test="!data.link"><a if="data.header" class="header">$data.header</a>
      <div if="data.desc" class="description">$data.desc</div>
    </if>
  </div>
</div>