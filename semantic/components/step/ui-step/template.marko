
<dynamic tag-name="$data.tag" class="$data.status step">
  <ui-icon attrs="data.icon" if="data.icon">
    <div if="data.hasContent" class="content">
      <div if="data.label" class="title">$data.label</div>
      <div if="data.desc" class="description">$data.desc</div>
    </div>
  </ui-icon>
</dynamic>