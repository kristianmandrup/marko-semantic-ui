
<div class="$data.status step">
  <if test="data.icon">
    <ui-icon attrs="data.icon"></ui-icon>
  </if>
  <div class="content">
    <if test="data.label">
      <div class="title">$data.label</div>
    </if>
    <if test="data.desc">
      <div class="description">$data.desc</div>
    </if>
  </div>
</div>